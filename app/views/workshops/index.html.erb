<p id="notice"><%= notice %></p>

<h1>Workshops</h1>

<div class="row">
<% @workshops.each do |workshop| %>
  <div class="col s6 m4">
    
      <div class="card">
        <div class="card-image">
          <% if workshop.images.present? %>
            <%= image_tag workshop.images.first %>
          <% else %>
            <%= link_to(image_tag("photo.jpg")) %>
          <% end %>
          <span class="card-title">
            <%= workshop.title %>
          </span>
        </div>
        <div class="card-content">
         <%= workshop.description %>
        </div>
        <div class="card-action">
          <%= link_to 'See more', workshop_path(workshop) %>
        </div>
      </div>
    
  </div>
  <% end %>
</div>