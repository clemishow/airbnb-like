<p id="notice"><%= notice %></p>

<h1>My books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Duration</th>
      <th>Total price</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= link_to book.title, workshops_show_book_path(book) %></td>
        <td><%= book.start_date %></td>
        <td><%= book.end_date %></td>
        <td><%= distance_of_time_in_words(book.start_date, book.end_date) %></td>
        <td><%= (((book.start_date - book.end_date).to_i / 86400) * book.price).to_s + ' â‚¬' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

