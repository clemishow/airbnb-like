<div class="container">
  <h1>My books</h1>

  <%= content_tag(:div, notice, :class => "card-panel green darken-1 white-text") if notice %>

  <% if @books_all.empty? %>
    <div class="card-panel">
      <span class="blue-text text-darken-2">
        <div>
          You have no bookings
        </div>
        <br>
        <div>
          <%= link_to 'Find an workshop', home_path, class: "btn" %>
        </div>
      </span>
    </div>
  <% else %>   
    <div class="row">
      <div class="col s12">
        <ul class="tabs">
          <li class="tab col s4"><a class="active" href="#test1">All bookings</a></li>
          <li class="tab col s4"><a  href="#test2">Coming bookings</a></li>
          <li class="tab col s4"><a href="#test3">Previous bookings</a></li>
        </ul>
      </div>
    </div>

    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Start date</th>
          <th>End date</th>
          <th>Duration</th>
          <th>Total price</th>
        </tr>
      </thead>
    
      <tbody id="test1">
        <% @books_all.each do |book| %>
          <tr>
            <td><%= link_to book.title, workshops_show_book_path(book) %></td>
            <td><%= book.start_date.to_formatted_s(:long)  %></td>
            <td><%= book.end_date.to_formatted_s(:long)  %></td>
            <td><%= distance_of_time_in_words(book.start_date, book.end_date) %></td>
            <td><%= book.total_price.to_s + ' €' %></td>
          </tr>
        <% end %>
      </tbody>

      <tbody id="test2">
        <% @books_coming.each do |book| %>
          <tr>
            <td><%= link_to book.title, workshops_show_book_path(book) %></td>
            <td><%= book.start_date.to_formatted_s(:long)  %></td>
            <td><%= book.end_date.to_formatted_s(:long)  %></td>
            <td><%= distance_of_time_in_words(book.start_date, book.end_date) %></td>
            <td><%= book.total_price.to_s + ' €' %></td>
          </tr>
        <% end %>
      </tbody>

      <tbody id="test3">
        <% @books_previous.each do |book| %>
          <tr>
            <td><%= link_to book.title, workshops_show_book_path(book) %></td>
            <td><%= book.start_date.to_formatted_s(:long)  %></td>
            <td><%= book.end_date.to_formatted_s(:long)  %></td>
            <td><%= distance_of_time_in_words(book.start_date, book.end_date) %></td>
            <td><%= book.total_price.to_s + ' €' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
  <br>
</div>